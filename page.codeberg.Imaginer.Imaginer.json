{
    "app-id" : "page.codeberg.Imaginer.Imaginer",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "49",
    "sdk" : "org.gnome.Sdk",
    "command" : "imaginer",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        "pypi-dependencies.json",
        {
            "name" : "imaginer",
            "builddir" : true,
            "buildsystem" : "meson",
            "config-opts": [
                "-Dbuildtype=release"
            ],
            "post-install": [
              "desktop-file-edit --set-key=Categories --set-value=Graphics \"${FLATPAK_DEST}/share/applications/${FLATPAK_ID}.desktop\""
            ],
            "sources" : [
                {
                    "type": "git",
                    "url": "https://codeberg.org/Imaginer/Imaginer.git",
                    "tag": "v0.2.2",
                    "commit": "e36e58c1c85683b478566694ed84d723a5060666",
                    "x-checker-data": {
                        "is-main-source": true,
                        "type": "anitya",
                        "project-id": 387652,
                        "tag-template": "v$version"
                    }
                }
            ]
        }
    ]
}
